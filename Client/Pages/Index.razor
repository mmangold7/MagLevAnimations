@page "/"

<PageTitle>Magnet Simulator</PageTitle>

<div>
    <button @onclick="ToggleSimulation">@(!Paused ? "Pause Simulation" : "Start Simulation")</button>
    <button @onclick="ToggleVisualizationMode">@(_showCoils ? "Show Cylinders" : "Show Coils")</button>
    <input type="number" @bind="_divisions" />
    <button @onclick="ToggleGravityField">@(_showGravityField ? "Hide Gravity Field" : "Show Gravity Field")</button>
    <button @onclick="ToggleMagneticField">@(_showMagneticField ? "Hide Magnetic Field" : "Show Magnetic Field")</button>
    <input type="number" @bind="_voxelsPerDivisions" />
    <button @onclick="ToggleApproximation">@(_useDipoleApproximation ? "Use Magnetized Voxels" : "Use Dipoles")</button>

</div>
<div class="canvas-container">
    <canvas id="threejs-canvas"></canvas>
</div>